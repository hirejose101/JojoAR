rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write their own tweets
    match /tweets/{tweetId} {
      allow read: if true; // Anyone can read tweets
      allow create: if request.auth != null; // Only authenticated users can create
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Allow anyone to read user profiles (needed for username checking during registration)
    // Users can only write their own profile
    match /users/{userId} {
      allow read: if true; // Anyone can read user profiles (for username availability check)
      allow create: if request.auth != null; // Authenticated users can create their profile
      allow update, delete: if request.auth != null && request.auth.uid == userId; // Users can only modify their own profile
    }
    
    // Friends collection - allow authenticated users to read/write
    match /friends/{friendId} {
      allow read, write: if request.auth != null;
    }
    
    // Friend requests - allow authenticated users to read/write
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
  }
}
