rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow users to read and write their own tweets
    match /tweets/{tweetId} {
      allow read: if true; // Anyone can read tweets
      allow create: if request.auth != null; // Only authenticated users can create
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid; // Only tweet author can delete
      allow update: if request.auth != null && (
        // Tweet author can update their own tweet completely
        resource.data.userId == request.auth.uid ||
        // Any authenticated user can update likes and comments fields
        (request.writeFields.hasOnly(['likes']) || request.writeFields.hasOnly(['comments']) || request.writeFields.hasOnly(['likes', 'comments']))
      );
    }
    
    // Allow anyone to read user profiles (needed for username checking during registration)
    // Users can only write their own profile
    match /users/{userId} {
      allow read: if true; // Anyone can read user profiles (for username availability check)
      allow create: if request.auth != null; // Authenticated users can create their profile
      allow update, delete: if request.auth != null && request.auth.uid == userId; // Users can only modify their own profile
    }
    
    // Friends collection - allow authenticated users to read/write
    match /friends/{friendId} {
      allow read, write: if request.auth != null;
    }
    
    // Friend requests - allow authenticated users to read/write
    match /friendRequests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    // Reports collection - allow authenticated users to submit reports
    match /reports/{reportId} {
      allow create: if request.auth != null; // Authenticated users can create reports
      allow read: if false; // Reports are only readable by admin (you can change this for admin access)
      allow update, delete: if false; // Only admin should modify reports
    }
  }
}
